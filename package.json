    "eslint-plugin-sort-destructure-keys": "2.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "3.3.0",
    "eslint-plugin-vue": "9.32.0",
    "globals": "15.14.0",
    "husky": "9.1.7",
    "lint-staged": "15.3.0",
    "prettier": "3.4.2",
    "rollup": "4.31.0",
    "rollup-plugin-dts": "6.1.1",
    "tsup": "8.4.0",
    "turbo": "2.5.5",
    "typescript": "5.8.3",
