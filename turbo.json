{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        ".output/**",
        ".svelte-kit/**",
        ".vitepress/dist/**",
        "dist/**"
      ],
      "inputs": [
        "src",
        "package.json",
        "tsconfig.json",
        "tsconfig.base.json",
        "turbo.json",
        "tsup.config.ts"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "dependsOn": []
    },
    "test:coverage": {
      "cache": false,
      "dependsOn": []
    },
    "test:e2e": {
      "cache": false,
      "dependsOn": []
    },
    "test:update": {
      "cache": false,
      "dependsOn": []
    },
    "test:watch": {
      "cache": false,
      "dependsOn": []
    },
    "typecheck": {
      "cache": false,
      "dependsOn": []
    }
  }
}
