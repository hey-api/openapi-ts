{
  "openapi": "3.1.1",
  "info": {
    "title": "OpenAPI 3.1.1 components request bodies example",
    "version": "1"
  },
  "paths": {
    "/foo": {
      "post": {
        "requestBody": {
          "$ref": "#/components/requestBodies/Foo"
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "requestBodies": {
      "Foo": {
        "description": "Foo",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "page": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    }
  }
}
